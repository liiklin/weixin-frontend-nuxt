// 覆盖button变量
topBg = #69a2fc
topBgActive = #324d6b
bottomBg = #4581e4
fontColor = #fff
topBg1 = #fdb32b
topBgActive1 = #9a4d17
bottomBg1 = #cd8c22
fontColor1 = #fff
topSize = 8px
fontSize = 0.625em

@import '~assets/components/button.styl'

.content
  position relative

.bg
  background #ffffff
  height auto
  width 100%
  img
    height 160px
    width 100%

.top_img
  position absolute
  width 100%
  height auto
  text-align center
  top 135px
  img
    height auto
    width 40%

.top_title
  position absolute
  width 100%
  height auto
  text-align center
  top 140px
  font-size 14px
  color #ffffff

.top_header
  position absolute
  top 20px
  width 100%
  .top_left
    padding 5px 0px 5px 5%
    > span
      margin 4px
      font-size 12px
      color #ffffff
    .time
      position relative
      text-align center
      color #ff9000
      font-size 20px
      .time_bg
        img
          width 75%
      .time_hour
          position absolute
          top 35%
          left 22%
      .time_moment
          position absolute
          top 35%
          left 65%
  .top_right
    padding 5px 5% 5px 0px
    height auto
    .cricle
      border solid 4px #00f6ff
      border-radius 72px
      height 72px
      width 72px
      color #ffffff
      text-align center
      .cricle_top
        font-size 1.5em
      .cricle_center
        background  #017da6
        height 1px
        width 70%
        margin-bottom 5px
      .cricle_bottom
        font-size 0.625em

.content_center
  margin-top 5%
  background #ffffff
  height 100%
  width 100%
  z-index 999
  > div
    > span
      &:nth-child(1)
        font-size 0.625em
        color #d0d0d0
      &:nth-child(2)
        font-size 0.75em
        color #ff9b24
      &:nth-child(3)
        font-size 0.75em
        color #00d2f1
.subject
  margin 5%
  border-radius 5px
  border solid 1px #85e0ff
  background #f3ffff
  div
    padding 3% 5%
    font-size 0.625em
    &:nth-child(odd)
      border-bottom #d0f3f3
      border-bottom-style solid
      border-bottom-width 1px
.answer
  margin 0px 5% 5px
  background #ffffff
  height 100%
  font-size 0.625em
  .answer_list
    padding 3%
    color #666666
    i
      padding-right 5px
  .answer_list_active
    padding 3%
    color #eb005c
    i
      color #eb005c

.bottom_group
  margin 0px 5% 5px

.chance
  margin 0px 5%
  text-align center
  color #666666
  font-size 0.625em
