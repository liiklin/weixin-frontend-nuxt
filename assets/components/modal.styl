@import '~assets/components/button.styl'

.modal-mask
  position fixed
  z-index 9998
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .5)
  display table
  transition opacity .5s ease

.modal-wrapper
  display table-cell
  vertical-align middle

.modal-container
  position relative
  margin 5%
  background-color #fff
  border-radius 5px
  border-color #fa4d8d
  border-style solid
  border-width 5px
  height 65%
  box-shadow 0 2px 8px rgba(0, 0, 0, .33)
  transition all .5s ease

.modal-header
  position absolute
  width 100%
  height auto
  top -6%
  text-align center
.modal-header-bg
  position absolute
  width 100%
  top 0px
  div
    img
    width 45%
    max-height 50px
.modal-header-title
  position absolute
  top 0px
  width 100%
  height 50px
  span
    color #fff
    font-size 14px
    height 50px
    line-height 30px

.modal-body
  position absolute
  width 90%
  padding 10px 5%
  min-height 50%
  max-height 70%
  overflow  auto
  top 5%

.modal-footer
  position absolute
  bottom 0px
  width 90%
  padding 2px 5%

.modal-enter
  opacity 0
.modal-leave-active
  opacity 0
.modal-enter .modal-container,
.modal-leave-active .modal-container
  transform scale(1.1)
