@import '~assets/components/button.styl'

.modal-mask
  position fixed
  z-index 9998
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .5)
  display table
  transition opacity .5s ease

.modal-wrapper
  display table-cell
  vertical-align middle

.modal-container
  position relative
  margin 5%
  background-color #fff
  border-radius 5px
  height 65%
  box-shadow 0 2px 8px rgba(0, 0, 0, .33)
  transition all .5s ease

.modal-header
  width 100%
  background #2257a2
  background linear-gradient(#71b6f0 0%,#2257a2 100%)
  color #fff
  font-size 1em
  > .modal-header-bottom
    background url('~static/img/bl.svg')
    height 8px
    width 100%

.modal-body
  width 90%
  padding 10px 5%
  overflow  auto

.modal-footer
  width 90%
  padding 2px 5%

.modal-enter
  opacity 0
.modal-leave-active
  opacity 0
.modal-enter .modal-container,
.modal-leave-active .modal-container
  transform scale(1.1)
